<?xml version="1.0"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           attributeFormDefault="unqualified" 
           elementFormDefault="qualified" 
           targetNamespace="https://raw.githubusercontent.com"
           xmlns="https://raw.githubusercontent.com">
    <xs:include schemaLocation="src/main/resources/org/cirdles/squid/schema/SquidRatiosModel.xsd"/>
    <xs:include schemaLocation="src/main/resources/org/cirdles/squid/schema/SquidSpeciesModel.xsd"/>
    
    <xs:annotation>
        <xs:documentation xml:lang="en">
            This schema defines the contents of a Squid Session Model

