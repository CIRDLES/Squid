<AnchorPane fx:id="taskManagerAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="640.0" prefWidth="1000.0" styleClass="backgroundCalamari" stylesheets="@css/projectManager.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.squid.gui.TaskManagerController">
   <children>
      <Label layoutX="24.0" layoutY="15.0" text="Task Name:" />
      <TextField fx:id="taskNameTextField" layoutX="127.0" layoutY="15.0" prefHeight="27.0" prefWidth="608.0" promptText="Task name" />
      <Label layoutX="742.0" layoutY="15.0" text="Type:" />
      <HBox layoutX="798.0" layoutY="20.0" prefHeight="21.0" prefWidth="181.0">
         <children>
            <RadioButton fx:id="geochronTaskTypeRadioButton" mnemonicParsing="false" onAction="#geochronTaskTypeRadioButtonAction" prefHeight="18.0" prefWidth="106.0" selected="true" text="Geochron">
               <toggleGroup>
                  <ToggleGroup fx:id="taskTypeToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="generalTaskTypeRadioButton" mnemonicParsing="false" onAction="#generalTaskTypeRadioButtonAction" prefHeight="18.0" prefWidth="102.0" text="General" toggleGroup="$taskTypeToggleGroup" />
         </children>
      </HBox>
      <Label layoutX="21.0" layoutY="55.0" text="Description:" />
      <TextField fx:id="taskDescriptionTextField" layoutX="127.0" layoutY="56.0" prefHeight="27.0" prefWidth="854.0" promptText="Task Description" style="-fx-font-size: 12;" />
      <Label layoutX="55.0" layoutY="95.0" text="Author:" />
      <TextField fx:id="authorsNameTextField" layoutX="127.0" layoutY="96.0" prefHeight="27.0" prefWidth="380.0" promptText="Author's Name" />
      <Label layoutX="521.0" layoutY="95.0" text="Lab Name:" />
      <TextField fx:id="labNameTextField" layoutX="613.0" layoutY="96.0" prefHeight="27.0" prefWidth="366.0" promptText="Lab Name:" />
      <Label layoutX="20.0" layoutY="135.0" text="Provenance:" />
      <TextField fx:id="provenanceTextField" layoutX="127.0" layoutY="136.0" prefHeight="27.0" prefWidth="854.0" promptText="Provenance" />
      <Label layoutX="126.0" layoutY="175.0" prefHeight="28.0" prefWidth="249.0" text="Normalise Ion Counts for SBM?" />
      <HBox layoutX="380.0" layoutY="180.0">
         <children>
            <RadioButton fx:id="yesSBMRadioButton" layoutX="350.0" mnemonicParsing="false" onAction="#yesSBMRadioButtonAction" prefWidth="50.0" selected="true" text="Yes">
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroupSMB" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="noSBMRadioButton" mnemonicParsing="false" onAction="#noSBMRadioButtonActions" prefHeight="12.0" prefWidth="50.0" text="No" toggleGroup="$toggleGroupSMB" />
         </children>
      </HBox>
      <Label layoutX="126.0" layoutY="200.0" prefHeight="28.0" prefWidth="202.0" text="Ratio Calculation Method:" />
      <HBox layoutX="338.0" layoutY="205.0">
         <children>
            <RadioButton fx:id="linearRegressionRatioCalcRadioButton" layoutX="350.0" mnemonicParsing="false" onAction="#linearRegressionRatioCalcRadioButtonAction" opacity="0.98" prefHeight="18.0" prefWidth="249.0" text="Linear regression to burn mid-time">
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroupRatioCalcMethod" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="spotAverageRatioCalcRadioButton" mnemonicParsing="false" onAction="#spotAverageRatioCalcRadioButtonAction" opacity="0.98" prefHeight="18.0" prefWidth="212.0" selected="true" text="Spot Average (time-invariant)" toggleGroup="$toggleGroupRatioCalcMethod" />
         </children>
      </HBox>
      <Label layoutX="20.0" layoutY="175.0" text="Parameters:" />
      <Label layoutX="70.0" layoutY="302.0" text="Audit:" />
      <TextArea fx:id="taskAuditTextArea" layoutX="127.0" layoutY="307.0" prefHeight="326.0" prefWidth="854.0" style="-fx-background-color: white; -fx-border-color: black; -fx-font-family: Courier New; -fx-font-size: 12; -fx-font-weight: bold;" />
