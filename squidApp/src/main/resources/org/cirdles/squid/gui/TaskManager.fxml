      <Label layoutX="127.0" layoutY="228.0" prefHeight="28.0" prefWidth="173.0" text="Parent Concentration:" />
      <Label layoutX="127.0" layoutY="256.0" prefHeight="28.0" prefWidth="195.0" text="Preferred index isotope:" />
      <RadioButton fx:id="pb204RadioButton" layoutX="338.0" layoutY="262.0" mnemonicParsing="false" onAction="#pb204RadioButtonAction" prefHeight="18.0" prefWidth="68.0" selected="true" text="204Pb">
         <toggleGroup>
            <ToggleGroup fx:id="toggleGroupIsotope" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="pb207RadioButton" layoutX="423.0" layoutY="262.0" mnemonicParsing="false" onAction="#pb207RadioButtonAction" prefHeight="18.0" prefWidth="68.0" text="207Pb" toggleGroup="$toggleGroupIsotope" />
      <RadioButton fx:id="pb208RadioButton" layoutX="510.0" layoutY="262.0" mnemonicParsing="false" onAction="#pb208RadioButtonAction" prefHeight="18.0" prefWidth="68.0" text="208Pb" toggleGroup="$toggleGroupIsotope" />
   </children>
</AnchorPane>
